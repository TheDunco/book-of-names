{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/server && pnpm build",
    "watchPatterns": [
      "*"
    ]
  },
  "deploy": {
    "startCommand": "cd apps/server && pnpm serve",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}